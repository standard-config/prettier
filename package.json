{
	"name": "@standard-config/prettier",
	"version": "1.9.1",
	"description": "TypeScript-first Prettier config",
	"license": "MIT",
	"author": {
		"name": "Dom Porada",
		"email": "dom@dom.engineering",
		"url": "https://dom.engineering"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/standard-config/prettier.git"
	},
	"keywords": [
		"json-sorting",
		"oxc",
		"prettier",
		"prettier-config",
		"standard-config",
		"typescript"
	],
	"files": [
		".editorconfig",
		"dist/**"
	],
	"type": "module",
	"sideEffects": false,
	"exports": "./dist/index.mjs",
	"types": "./dist/index.d.mts",
	"engines": {
		"node": ">=20"
	},
	"packageManager": "pnpm@10.29.2",
	"dependencies": {
		"@prettier/plugin-oxc": "^0.1.3",
		"@prettier/plugin-xml": "^3.4.2",
		"prettier-plugin-expand-json": "^1.0.4",
		"prettier-plugin-markdown-html": "^1.2.0",
		"prettier-plugin-packagejson": "^3.0.0",
		"prettier-plugin-sh": "^0.18.0",
		"prettier-plugin-sort-json": "^4.2.0",
		"prettier-plugin-yaml": "^1.1.2",
		"rfdc": "^1.4.1"
	},
	"peerDependencies": {
		"prettier": ">=3.7"
	},
	"devDependencies": {
		"@standard-config/eslint": "1.4.0",
		"@standard-config/oxlint": "1.0.3",
		"@standard-config/tsconfig": "2.0.2",
		"@types/node": "22.19.11",
		"@vitest/coverage-v8": "4.0.18",
		"eslint": "9.39.2",
		"husky": "9.1.7",
		"jiti": "2.6.1",
		"oxlint": "1.43.0",
		"oxlint-tsgolint": "0.11.5",
		"prettier": "3.8.1",
		"publint": "0.3.17",
		"tsdown": "0.20.3",
		"typescript": "5.9.3",
		"vitest": "4.0.18"
	},
	"scripts": {
		"build": "tsdown",
		"fix": "pnpm format && pnpm lint && pnpm format",
		"fixtures:scramble": "prettier --config fixtures/config.ts --write fixtures && sleep 1",
		"fixtures:unscramble": "pnpm prettier --write fixtures && sleep 1",
		"format": "prettier --ignore-unknown --log-level=warn --write .",
		"format:check": "prettier --check --ignore-unknown .",
		"lint": "oxlint --fix --report-unused-disable-directives --type-aware --type-check && eslint --fix .",
		"lint:check": "oxlint --deny-warnings --report-unused-disable-directives --type-aware --type-check && eslint .",
		"prepack": "pnpm run '/^(format:check|lint:check|test|typecheck)$/' && pnpm build",
		"prepare": "husky",
		"test": "vitest run",
		"test:fixtures": "pnpm run '/^fixtures:/' && git diff --exit-code fixtures",
		"typecheck": "tsc --noEmit"
	}
}
