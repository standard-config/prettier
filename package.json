{
	"name": "@standard-config/prettier",
	"version": "1.3.0",
	"description": "TypeScript-first Prettier config",
	"license": "MIT",
	"author": {
		"name": "Dom Porada",
		"email": "dom@dom.engineering",
		"url": "https://dom.engineering"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/standard-config/prettier.git"
	},
	"keywords": [
		"json-sorting",
		"oxc",
		"prettier-config",
		"standard-config",
		"typescript"
	],
	"files": [
		"dist/**"
	],
	"type": "module",
	"sideEffects": false,
	"exports": "./dist/index.mjs",
	"types": "./dist/index.d.mts",
	"engines": {
		"node": ">=22"
	},
	"packageManager": "pnpm@10.28.0",
	"dependencies": {
		"@prettier/plugin-oxc": "^0.1.3",
		"klona": "^2.0.6",
		"prettier-plugin-packagejson": "^3.0.0",
		"prettier-plugin-sh": "^0.18.0",
		"prettier-plugin-sort-json": "^4.2.0"
	},
	"peerDependencies": {
		"prettier": ">=3.7"
	},
	"devDependencies": {
		"@standard-config/tsconfig": "2.0.0",
		"@vitest/coverage-v8": "4.0.17",
		"husky": "9.1.7",
		"oxlint": "1.40.0",
		"oxlint-tsgolint": "0.11.1",
		"prettier": "3.8.0",
		"publint": "0.3.16",
		"tsdown": "0.19.0",
		"typescript": "5.9.3",
		"vitest": "4.0.17"
	},
	"scripts": {
		"build": "tsdown",
		"fix": "pnpm format && pnpm lint",
		"format": "prettier --write --ignore-unknown .",
		"format:check": "prettier --check --ignore-unknown .",
		"lint": "oxlint --fix --type-aware --type-check --deny-warnings --report-unused-disable-directives",
		"lint:check": "oxlint --type-aware --type-check --deny-warnings --report-unused-disable-directives",
		"prepack": "pnpm run '/^(format:check|lint:check|test|typecheck)$/' && pnpm build",
		"prepare": "husky",
		"test": "vitest run",
		"typecheck": "tsc --noEmit"
	}
}
